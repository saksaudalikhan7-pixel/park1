# ============================================
# Django Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# File: backend/.env

# ============================================
# CORE SETTINGS (Required)
# ============================================

# SECURITY WARNING: Generate a new secret key for production!
# Generate using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-dev-key-change-this-in-production

# Debug mode - MUST be False in production
# Values: True, False, 1, 0
DEBUG=True

# Allowed hosts - comma-separated list of domains
# Development: localhost,127.0.0.1
# Production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# CORS SETTINGS (Required for Frontend)
# ============================================

# CORS allowed origins - comma-separated list of frontend URLs
# Development: http://localhost:3000,http://localhost:5000
# Production: https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================
# DATABASE (Optional - defaults to SQLite)
# ============================================

# Leave DB_ENGINE empty or commented out to use SQLite (default for local development)
# Uncomment and set to use PostgreSQL

# Azure PostgreSQL Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=postgres
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=your-server.postgres.database.azure.com
DB_PORT=5432
DB_SSL_MODE=require

# Alternative: PostgreSQL connection string (not currently used)
# Format: postgresql://username:password@host:port/database
# Example: postgresql://ninja_user:password123@localhost:5432/ninja_park_db
# DATABASE_URL=postgresql://user:password@localhost:5432/ninja_park_db

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================

# Email backend for sending notifications
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@ninjapark.com

